		OLE_SetDocumentVar(oWord,"Prc_quant"+AllTrim(Str(nK)),waQuant[nK])
		OLE_SetDocumentVar(oWord,"Prc_un"+AllTrim(Str(nK)),waUn[nK])
		OLE_SetDocumentVar(oWord,"Prc_desc"+AllTrim(Str(nK)),waDesc[nK])
