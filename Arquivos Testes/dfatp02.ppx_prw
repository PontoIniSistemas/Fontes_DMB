Local cArquivo := ""
Local waItem	:= {}
Local waQuant	:= {}
Local waUn		:= {}
Local waDesc	:= {}
Local waVlUnit	:= {}
Local waTot		:= {}
Local waEntrega	:= {}
Local _aIpi	    := {}
Local _nTotal   := 0





cArquivo := "\Orcamento\Orcamento.dot"

nPos := Rat("\",cArquivo)
